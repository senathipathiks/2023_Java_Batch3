<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
  "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
   
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost/stud_db</property>
    <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
    <property name="connection.username">root</property>
    <property name="connection.password">Password@12345</property>
    <property name="show_sql">true</property>
    
    <property name="hbm2ddl.auto">update</property>
    <mapping class="com.hibernate.relationshipmappingday4.Employee1manytoone.Employee"/>
     <mapping class="com.hibernate.relationshipmappingday4.Employee1manytoone.Department"/>
    
    <!-- <mapping class="com.sena.mavenday1.Student" ></mapping> -->
  </session-factory>
</hibernate-configuration>