<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
		<class name="com.sampleofsat.mavenproj.Person" table="person">
        <id name="perName" column="perName">
        <generator class="assigned"></generator>
        </id>
        <property name="perAge" type="int"/>
        <property name="perMobileno" type="long"/>
        <property name="perAddress" type="string"/>
    </class>
		
</hibernate-mapping>